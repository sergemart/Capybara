<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_fragment_container_major"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        style="@style/App.ImageView.Background"
        android:contentDescription="@string/desc_page_background"/>

    <fragment
        android:id="@+id/nav_host_fragment_major"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_major"/>

</FrameLayout>
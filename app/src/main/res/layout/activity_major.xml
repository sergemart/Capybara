<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_fragment_container_major"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Navigation graph container -->
    <fragment
        android:id="@+id/nav_host_fragment_major"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_major"/>

    <!-- Drawer container -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView_major"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_drawer_major"/>

</androidx.drawerlayout.widget.DrawerLayout>
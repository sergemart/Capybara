<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.InitialCommonSignInFragment">

    <include
        layout="@layout/content_waiting"
        android:id="@+id/layout_waiting"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView_background"
        style="@style/App.ImageView.Background"
        android:contentDescription="@string/desc_page_background"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sign_in"
        style="@style/App.Button"
        android:layout_gravity="center"
        android:text="@string/action_sign_in"/>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.fragment.InitialMinorWaitForInviteFragment">

    <include
        layout="@layout/content_background_general"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView_wait"
            style="@style/App.TextView"
            android:text="@string/msg_waiting_for_invite"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_exit_application"
            style="@style/App.Button"
            android:text="@string/action_exit_application"/>

    </LinearLayout>

</FrameLayout>
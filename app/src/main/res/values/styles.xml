<resources>

    <!-- ========================== Application theme -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorDefaultPageBackground</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- ========================== Background image styles -->

    <style name="App.ImageView.Background" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/page_background</item>
    </style>


    <style name="App.ImageView.Background.ErrorPage">
        <item name="android:background">@color/colorErrorPageBackground</item>
    </style>


    <!-- ========================== Button styles -->

    <style name="App.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="strokeColor">@color/colorText</item>
        <item name="cornerRadius">@dimen/button_cornerRadius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/colorText</item>
    </style>


    <style name="App.Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/button$small_layout_margin</item>
        <item name="android:padding">@dimen/button$small_padding</item>
        <item name="android:textSize">@dimen/button$small_textSize</item>
    </style>


    <!-- ========================== TextView styles -->

    <style name="App.TextView" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/textView_layout_margin</item>
        <item name="android:textSize">@dimen/textView_textSize</item>
        <item name="android:textColor">@color/colorText</item>
    </style>


    <style name="App.TextView.Small">
        <item name="android:layout_margin">@dimen/textView$small_layout_margin</item>
        <item name="android:textSize">@dimen/textView$small_textSize</item>
    </style>


</resources>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.App.Button.LargeHollow" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_margin">24dp</item>
        <item name="android:padding">24dp</item>
        <item name="strokeColor">@color/colorLargeHollowButton</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorLargeHollowButton</item>
    </style>

    <style name="Widget.App.Button.SmallHollow" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="strokeColor">@color/colorLargeHollowButton</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorLargeHollowButton</item>
    </style>


</resources>
